# Truth Engine Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Security
ALLOWED_ORIGIN=http://localhost:3000

# Ollama Configuration 
# For local Ollama instance, use http://localhost:11434
# For remote Ollama instance, use the appropriate URL
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b

# Whether to use proxies for web scraping (true/false)
USE_PROXIES=false

# Blockchain Configuration
# The Ethereum network to connect to (development, goerli, sepolia, mainnet)
ETHEREUM_NETWORK=development

# The address of the deployed TruthVerification contract
CONTRACT_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3

# IPFS Configuration (for storing verification data)
# For Infura IPFS, get project ID and secret from https://infura.io/
INFURA_IPFS_PROJECT_ID=your_infura_project_id
INFURA_IPFS_PROJECT_SECRET=your_infura_project_secret

# Enable/disable blockchain verification features
BLOCKCHAIN_ENABLED=false